@charset "utf-8";
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,form,input,textarea,p,th,td,var{margin:0;padding:0;}
dl,ul,ol,li{list-style-type:none;}
h1,h2,h3,h4{font-family:"微软雅黑",Arial,Verdana;font-weight:normal;font-size:14px;}
var,em{font-style:normal;}
a{text-decoration:none;color:#333;}
a:hover{color:#f18d22;}
a img{border:none;}
b{font-weight:normal;}
input:focus,textarea:focus{outline:none;}
.clear{height:0;overflow:hidden;clear:both;}
body{font-family:Arial,sans-serif,'宋体';font-size:14px;color:#333; background: #fff;}
body{height: 100%; min-width: 1000px;}

.clearfix:before,.clearfix:after{content:"";display:table;height:0;font-size:0;line-height:0;visibility:hidden;}
.clearfix:after{clear:both;}
.clearfix{*zoom:1;}
.fl{float:left;}
.fr{float: right;}

.wrapper{ min-height: 100%;}
.header{ height: 32px;}
.login_top{ padding-right: 20px; text-align: right; line-height: 32px; font-size: 12px; color: #fff;}
.login_top a{ color: #fff;}
.login_top a:hover{ color: #f18d22;}
.login_top em{ margin: 0 10px;}
/*logo*/
.logo{ padding-top: 100px;margin-bottom: 50px; text-align: center;}
/*搜索*/
.srh_form{ margin: 0 auto; width: 630px; font: 16px arial; background: #fff; }
.drop_wrap{position: relative; width: 84px; height: 20px; padding: 9px 0px 9px 10px; border: 1px solid #d8d8d8; border-right: 0;}
.drop_cru{position: relative; height: 20px; line-height: 20px; border-right: 1px solid #d8d8d8; cursor: pointer;}
.drop_arrow{ display: inline-block;position: absolute; right: 10px; top: 2px; width: 15px;height: 15px; background: url(../images/dropdown.png) no-repeat 0 0; background-size: 15px 15px;}
.drop_option{position: absolute;top: 39px; left: -1px; width: 73px; padding:0 10px; border: 1px solid #d8d8d8; border-top: 0; background: #fff;}
.drop_option li{ height: 40px; line-height: 40px; border-bottom: 1px solid #d8d8d8; cursor: pointer;}
.drop_option li:last-child{ border-bottom: 0;}
.srh_ipt{ width: 416px; height: 20px; padding: 9px 7px;border: 1px solid #d8d8d8; border-right: 0;border-left: 0; vertical-align: top; outline: none; box-shadow: none; font-size: 16px;}
.srh_btn{ display: block; width:103px; height: 38px; border: 1px solid #38f; background-color:#38f;}
.srh_submit{ cursor: pointer; width: 103px; height: 38px; padding: 0;border: 0; background: none; background-color: #38f; font-size: 16px; color: #fff; border-spacing: 0; font-weight: normal;}